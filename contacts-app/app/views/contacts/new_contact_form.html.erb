
<h1>Please fill in our form to make a new comment</h1>

<%= form_tag "/make_new_contact", method: :post do %>
  <div>
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name %>
  </div>

  <div>
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name %>
  </div>

  <div>
    <%= label_tag :phone_number %>
    <%= text_field_tag :phone_number %>
  </div>

  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div>
    <%= submit_tag "Punch It!!!"%>
  </div>

<% end %>
